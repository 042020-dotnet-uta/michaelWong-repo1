@model WebStoreApp.Web.Models.OrdersModel
<table class="table">
    <thead>
        <tr class="d-flex">
            <th class="col-3">
                Location
            </th>
            <th class="col-2">
                Name
            </th>
            <th class="col-2">
                Price
            </th>
            <th class="col-2">
                Quantity
            </th>
            <th class="col-3">
                Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderModel in Model.OrderModels)
        {
            <tr class="d-flex">
                <td class="col-3">
                    <strong>@Html.DisplayFor(m => orderModel.LocationName)</strong>
                </td>
                <td class="col-2">
                    <strong>@Html.DisplayFor(m => orderModel.ProductName)</strong>
                </td>
                <td class="col-2">
                    @Html.DisplayFor(m => orderModel.ProductPrice)
                </td>
                <td class="col-2">
                    @Html.DisplayFor(m => orderModel.Quantity)
                </td>
                <td class="col-3">
                    @Html.DisplayFor(m => orderModel.Timestamp)
                </td>
            </tr>
        }
    </tbody>
</table>