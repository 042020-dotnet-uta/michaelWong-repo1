@model WebStoreApp.Web.Models.LoginModel

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <h4>User Login</h4>
    <div class="form-group">
        <label asp-for="UsernameLogin" class="control-label"></label>
        <input asp-for="UsernameLogin" class="form-control" />
        <span asp-validation-for="UsernameLogin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordLogin" class="control-label"></label>
        <input type="password" asp-for="PasswordLogin" class="form-control" />
        <span asp-validation-for="PasswordLogin" class="text-danger"></span>
    </div>
    <input type="submit" value="Login" />
    @Html.ValidationMessage("LoginError", new { @class = "text-danger"} )
}