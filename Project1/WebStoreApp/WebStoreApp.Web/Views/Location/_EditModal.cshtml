@model WebStoreApp.Web.Models.ProductModel

<div id="edit-modal" class="modal">
    <div class="modal-content">
        <h4>Edit Product Details</h4>
        <form method="POST" asp-action="Edit" asp-route-id="@Model.LocationId">
            <input type="hidden" asp-for="LocationId" value="@Model.LocationId"/>
            <input type="hidden" id="edit-product-id" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" id="edit-product-name" class="form-control">
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input type="number" asp-for="ProductPrice" id="edit-product-price" class="form-control" min="0" step="0.01">
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductQuantity" class="control-label"></label>
                <input type="number" asp-for="ProductQuantity" id="edit-product-quantity" class="form-control" min="0">
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
            <input type="submit" value="Edit" class="btn btn-primary" /> 
        </form>
    </div>
</div>