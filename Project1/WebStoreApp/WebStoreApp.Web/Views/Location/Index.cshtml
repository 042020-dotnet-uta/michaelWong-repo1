@model WebStoreApp.Web.Models.LocationViewModel

<h1>@Html.DisplayFor(model => model.Location.Name)</h1>
<button id="btn-create" class="btn btn-primary">Create New Product</button>
<div id="create-modal" class="modal">
    <div class="modal-content">

        <form method="POST" asp-action="Index">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control">
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control">
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductQuantity" class="control-label"></label>
                <input asp-for="ProductQuantity" class="form-control">
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
            <input type="submit" value="Create" class="btn btn-primary" />
        </form>

    </div>
</div>
@if (@Model.State == "create")
{
    <script type="text/javascript">
        window.addEventListener("DOMContentLoaded", (event) => {
            document.getElementById("create-modal").style.display = "block";
        });
    </script>
}

<partial name="_ProductsTable" model=Model></partial>

<script type="text/javascript" src="~/js/modal.js"></script>