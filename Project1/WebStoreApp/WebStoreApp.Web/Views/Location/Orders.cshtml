@model WebStoreApp.Web.Models.OrdersViewModel
@{
    ViewData["Title"] = $"{Model.LocationModel.LocationName} Order History";
}
<h1>@Model.LocationModel.LocationName</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel.OrderModels[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel.OrderModels[0].ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel.OrderModels[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersModel.OrderModels[0].Timestamp)
        </tr>
    </thead>
    <tbody>
        @foreach (var orderModel in Model.OrdersModel.OrderModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => orderModel.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(m => orderModel.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(m => orderModel.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(m => orderModel.Timestamp)
                </td>
            </tr>
        }
    </tbody>
</table>