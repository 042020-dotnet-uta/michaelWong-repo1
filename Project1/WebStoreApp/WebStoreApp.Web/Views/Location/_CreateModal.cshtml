@model WebStoreApp.Web.Models.ProductModel

<div id="create-modal" class="modal">
    <div class="modal-content">
        <h4>Create a New Product</h4>
        <form method="POST" asp-action="Create" asp-route-id="@Model.LocationId">
            <input type="hidden" asp-for="LocationId"/>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input type="number" asp-for="ProductPrice" class="form-control" min="0" step="0.01">
            </div>
            <div class="form-group">
                <label asp-for="ProductQuantity" class="control-label"></label>
                <input type="number" asp-for="ProductQuantity" class="form-control" min="0">
            </div>
            <input type="submit" value="Create" class="btn btn-primary" />
        </form>

    </div>
</div>