@model WebStoreApp.Web.Models.ProductModel

<div id="createModal" class="modal fade">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Product</h5>
                <button type="button" class="close" data-dimiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="POST" asp-route-id="@Model.LocationId" class="form">
                    <input type="hidden" asp-for="LocationId"/>
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductPrice" class="control-label"></label>
                        <input type="number" asp-for="ProductPrice" class="form-control" min="0" step="0.01">
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductQuantity" class="control-label"></label>
                        <input type="number" asp-for="ProductQuantity" class="form-control" min="0">
                    </div>
                    <div class="btn-group float-right">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>