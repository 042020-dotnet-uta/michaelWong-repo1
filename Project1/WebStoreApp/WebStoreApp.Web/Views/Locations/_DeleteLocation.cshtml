@model WebStoreApp.Web.Models.LocationModel

<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm">

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Location?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="delete-location-name" class="control-label h5 text-center"></div>
                <form asp-action="Delete" method="POST">
                    <div class="btn-group d-flex justify-content-center">
                        <input type="hidden" id="delete-location-id" asp-for="LocationId"/>
                        <input type="submit" value="Confirm Delete" class="btn btn-primary" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>